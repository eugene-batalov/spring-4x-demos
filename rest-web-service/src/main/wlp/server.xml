<server description="springServer">
    <!-- Enable features -->
    <featureManager>
        <feature>servlet-3.1</feature>
    </featureManager>

    <httpEndpoint httpPort="${default.http.port}" httpsPort="${default.https.port}" id="defaultHttpEndpoint"/>
    
    <webApplication id="${application.name}" location="${application.location}" name="${application.name}"/>
</server>